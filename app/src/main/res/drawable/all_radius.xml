<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
		    <solid
		        android:color="@color/grey_300" >
		    </solid>
            <stroke
		        android:width="1dp"
		        android:color="@color/grey_100" >
		    </stroke>
			<gradient
				android:angle="90"
				android:startColor="@color/grey_300"
				android:centerColor="@color/grey_100"
				android:endColor="@color/grey_300"
				android:type="linear" />
		    <corners
		        android:bottomLeftRadius="5dp"
				android:topLeftRadius="5dp"
				android:bottomRightRadius="5dp"
				android:topRightRadius="5dp">
		    </corners>
        </shape>
    </item>
</selector>
