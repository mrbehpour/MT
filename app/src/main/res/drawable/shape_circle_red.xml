<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape
			android:shape="oval">
			<solid
				android:color="@color/red_A300"/>
			<size
				android:width="120dp"
				android:height="120dp"/>
			<gradient
				android:angle="90"
				android:startColor="@color/red_A200"
				android:endColor="@color/red_A400"
				android:type="linear" />
			<stroke
				android:width="1dp"
				android:color="@color/grey_300" />
		</shape>
	</item>
</selector>