<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@color/grey_100"
    android:id="@+id/listItemTestResultRoot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Info Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <!-- Row 1 Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Empty -->
                <TextView
                    android:id="@+id/tvEmpty"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:fontFamily="@fonts/byekan"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text=""/>

                <!-- Zamane Test -->
                <TextView
                    android:id="@+id/tvZamaneTest"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:fontFamily="@fonts/byekan"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/TestDuration"/>

                <!-- Darsad Khata -->
                <TextView
                    android:id="@+id/tvDarsadKhata"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:fontFamily="@fonts/byekan"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_900"
                    android:text="@string/ErrPercent"/>
            </LinearLayout>

            <!-- Row 2 Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <!-- Voltage Label -->
                <TextView
                    android:id="@+id/tvVoltageLabel"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.16"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/blue_900"
                    android:textAlignment="center"
                    android:text="@string/VoltTitle"/>

                <!-- Voltage Faze C -->
                <TextView
                    android:id="@+id/tvVoltageFazeC"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/VoltC"/>

                <!-- Voltage Faze B -->
                <TextView
                    android:id="@+id/tvVoltageFazeB"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/VoltB"/>

                <!-- Voltage Faze A -->
                <TextView
                    android:id="@+id/tvVoltageFazeA"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/VoltA"/>
            </LinearLayout>

            <!-- Row 3 Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <!--  Jaryan Label -->
                <TextView
                    android:id="@+id/tvJaryaneLabel"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.16"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/green_900"
                    android:textAlignment="center"
                    android:text="@string/AmpTitle"/>

                <!-- Jaryane Faze C -->
                <TextView
                    android:id="@+id/tvJaryaneFazeC"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/AmpC"/>

                <!-- Jaryane Faze B -->
                <TextView
                    android:id="@+id/tvJaryaneFazeB"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/AmpB"/>

                <!-- Jaryane Faze A -->
                <TextView
                    android:id="@+id/tvJaryaneFazeA"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/AmpA"/>
            </LinearLayout>

            <!-- Row 4 Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <!--  Zarib Tavan Label -->
                <TextView
                    android:id="@+id/tvZaribTavanLabel"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.16"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/red_900"
                    android:textAlignment="center"
                    android:text="@string/PowerFactor"/>

                <!-- Zarib Tavan C -->
                <TextView
                    android:id="@+id/tvZaribTavanC"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/PowerCoeffC"/>

                <!--  Zarib Tavan B -->
                <TextView
                    android:id="@+id/tvZaribTavanB"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/PowerCoeffB"/>

                <!--  Zarib Tavan A -->
                <TextView
                    android:id="@+id/tvZaribTavanA"
                    android:layout_marginRight="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.28"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:text="@string/PowerCoeffA"/>


            </LinearLayout>

        </LinearLayout>

        <!-- Number Layout -->
        <LinearLayout
            android:layout_width="65sp"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_rect_testresult"
                android:fontFamily="@fonts/byekan"
                android:textSize="18sp"
                android:textColor="@color/green_800"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="gravity"
                android:text="99"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Line Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="70dp"
        android:background="@color/grey_300"
        android:orientation="horizontal"/>
</LinearLayout>
