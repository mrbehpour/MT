<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!-- Omoor Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Omoor Spinner -->
        <Spinner
            android:id="@+id/spnOmoor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/custom_rectangle"
            android:layout_gravity="center_vertical"
            />

        <!-- Omoor Text -->
        <TextView android:id="@+id/tvOmoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/byekan"
            android:text="@string/omoorMarboote"
            android:textColor="@color/grey_800"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="11sp"/>
    </LinearLayout>

    <!-- Moshtarakin Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            android:id="@+id/cvMoshtarakin"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:id="@+id/llMoshtarakin">

                <!-- Info Layout -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title Layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <!-- Downloading Lable -->
                        <TextView
                            android:id="@+id/tvLabelDarhaleDaryaftMoshtarakin"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/byekan"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical|left"
                            android:textAlignment="gravity"
                            android:textColor="#4291f1"
                            android:text="@string/darHaleDaryaft"
                            android:visibility="visible"/>
                        <!-- Title Lable -->
                        <TextView
                            android:id="@+id/tvLableMoshtarakin"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical|right"
                            android:fontFamily="@font/byekan"
                            android:text="@string/daryaftMoshtarakin"
                            android:textAlignment="gravity"
                            android:textColor="@color/grey_800"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- ProgressBar Layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <com.daimajia.numberprogressbar.NumberProgressBar
                            android:id="@+id/pbMoshtarakin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:progress_text_size="16dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Icon Layout -->
                <ImageView
                    android:id="@+id/ivMoshtarakin"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/daryaft_moshtarakin"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- Help -->
    <TextView android:id="@+id/tvSanjesh"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/byekan"
        android:text="@string/startDownloadHelp"
        android:textColor="@color/grey_600"
        android:gravity="center|bottom"
        android:textSize="11sp"/>
</LinearLayout>
