<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grey_200"
    android:id="@+id/listItemTestDisplayRoot">

    <!-- Main Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Natije Darsad Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp">
                        <TextView
                            android:id="@+id/tvNatijeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/byekan"
                            android:textSize="18sp"
                            android:gravity="center_horizontal|center_vertical"
                            android:textAlignment="gravity"
                            android:textColor="@color/grey_900"
                            android:text="نوع تست" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp">
                        <TextView
                            android:id="@+id/tvNatijeKhata"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/byekan"
                            android:textSize="16sp"
                            android:gravity="left|center_vertical"
                            android:textAlignment="gravity"
                            android:textColor="@color/grey_900"
                            android:text="2.75%" />
                        <TextView
                            android:id="@+id/tvLableKhata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:fontFamily="@font/byekan"
                            android:textSize="16sp"
                            android:gravity="right|center_vertical"
                            android:textAlignment="gravity"
                            android:textDirection="rtl"
                            android:textColor="@color/grey_700"
                            android:text="درصد خطای محاسبه شده :" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp">
                        <TextView
                            android:id="@+id/tvTestType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/byekan"
                            android:textSize="16sp"
                            android:gravity="left|center_vertical"
                            android:textAlignment="gravity"
                            android:textColor="@color/grey_900"
                            android:text="اکتیو / راکتیو" />
                        <TextView
