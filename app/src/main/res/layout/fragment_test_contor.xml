<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/grey_200">

    <!-- Main Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <!-- Top Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Active/Reactive Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp">
                <!-- Reactive -->
                <LinearLayout
                    android:id="@+id/llReactive"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/shape_left_radius">
                    <TextView
                        android:id="@+id/tvReactive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="راکتیو" />
                    </LinearLayout>
                <!-- Active -->
                <LinearLayout
                    android:id="@+id/llAeactive"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/shape_right_radius">
                    <TextView
                        android:id="@+id/tvActive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="اکتیو" />
                </LinearLayout>


            </LinearLayout>

            <!-- 1/3 Faz Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp">
                <!-- 3Faz -->
                <LinearLayout
                    android:id="@+id/ll3Faz"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/shape_left_radius">
                    <TextView
                        android:id="@+id/tv3Faz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="سه فاز" />
                </LinearLayout>
                <!-- 1Faz -->
                <LinearLayout
                    android:id="@+id/ll1Faz"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/shape_right_radius">
                    <TextView
                        android:id="@+id/tv1Faz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="تکفاز" />
                </LinearLayout>


            </LinearLayout>

            <!-- Test 1/2 Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="8dp">
                <!-- Test2 -->
                <LinearLayout
                    android:id="@+id/llTest2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/shape_left_radius">
                    <TextView
                        android:id="@+id/tvTest2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="تست 2" />
                </LinearLayout>
                <!-- Test1 -->
                <LinearLayout
                    android:id="@+id/llTest1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/shape_right_radius">
                    <TextView
                        android:id="@+id/tvTest1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="تست 1" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!-- Info (center) Layout -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Zarib CT -->
            <android.support.design.widget.TextInputLayout
                android:fontFamily="@font/byekan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="ضریب CT"
                android:layout_gravity="center">
                <EditText android:id="@+id/edtZaribCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:gravity="right"
                    android:textAlignment="gravity"/>
            </android.support.design.widget.TextInputLayout>


            <!-- Sabete Kontor -->
            <android.support.design.widget.TextInputLayout
                android:fontFamily="@font/byekan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="ثابت کنتور"
                android:layout_gravity="center">
                <EditText android:id="@+id/edtSabeteKontor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:gravity="right"
                    android:textAlignment="gravity"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Nesbat Kontor -->
            <android.support.design.widget.TextInputLayout
                android:fontFamily="@font/byekan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="نسبت کنتور"
                android:layout_gravity="center">
                <EditText android:id="@+id/edtNesbatKontor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:gravity="right"
                    android:textAlignment="gravity"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Tedad Dor -->
            <android.support.design.widget.TextInputLayout
                android:fontFamily="@font/byekan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="تعداد دور"
                android:layout_gravity="center">
                <EditText android:id="@+id/edtTedadDor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:textColor="@color/grey_900"
                    android:gravity="right"
                    android:textAlignment="gravity"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Sabte -99% -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
            <CheckBox
                android:id="@+id/cbSabte99"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/byekan"
                android:textSize="14sp"
                android:textDirection="rtl"
                android:textAlignment="gravity"
                android:gravity="right|center_vertical"
                android:layoutDirection="rtl"
                android:text="ثبت خطای %99-" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Taeed Button -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnTaeed"
        android:fontFamily="@font/byekan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="تأیید"/>
</LinearLayout>
