<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Test Button-->
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnManehTest"
        android:fontFamily="@fonts/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        fancy:fb_borderColor="@color/red_600"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/red_600"
        fancy:fb_focusColor="@color/red_200"
        fancy:fb_fontIconResource="&#xf05e;"
        fancy:fb_fontIconSize="30dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="20dp"
        fancy:fb_text="@string/ManehTestContor"
        fancy:fb_textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="100dp">

    </LinearLayout>
    <!-- Test Button-->
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnTest"
        android:fontFamily="@fonts/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@color/grey_800"
        android:textSize="22sp"
        fancy:fb_borderColor="@color/green_800"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/green_400"
        fancy:fb_focusColor="@color/green_200"
        fancy:fb_fontIconResource="&#xf05d;"
        fancy:fb_fontIconSize="30dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="20dp"
        fancy:fb_text="@string/Test"
        fancy:fb_textColor="#FFFFFF"/>

    <!-- Bazrasi Button-->
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnBazrasi"
        android:fontFamily="@fonts/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        fancy:fb_borderColor="@color/blue_800"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/blue_400"
        fancy:fb_focusColor="@color/blue_200"
        fancy:fb_fontIconResource="&#xf040;"
        fancy:fb_fontIconSize="30dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="20dp"
        fancy:fb_text="@string/Remark"
        fancy:fb_textColor="#FFFFFF"/>

    <!-- Polomp Button-->
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnPolomp"
        android:fontFamily="@fonts/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#0A0A0A"
        android:textSize="16sp"
        fancy:fb_borderColor="@color/ms_gray"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/ms_gray3"
        fancy:fb_focusColor="@color/ms_gray2"
        fancy:fb_fontIconResource="&#xf023;"
        fancy:fb_fontIconSize="30dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="20dp"
        fancy:fb_text="@string/Polomb"
        fancy:fb_textColor="#FFFFFF"/>

    <!-- Polomp Button-->
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnReadmeter"
        android:fontFamily="@fonts/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        fancy:fb_borderColor="@color/orange_800"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/orange_400"
        fancy:fb_focusColor="@color/orange_200"
        fancy:fb_fontIconResource="&#xf02d;"
        fancy:fb_fontIconSize="30dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="20dp"
        fancy:fb_text="@string/Readmeter"
        fancy:fb_textColor="#FFFFFF"/>

    <!-- Moshahedat Button-->
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnMoshahedat"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/byekan"
        android:textColor="#ffffff"
        android:textSize="16sp"
        fancy:fb_borderColor="@color/blue_900"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="@color/blue_700"
        fancy:fb_focusColor="@color/grey_200"
        fancy:fb_fontIconResource="&#xf030;"
        fancy:fb_fontIconSize="30dp"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="20dp"
        fancy:fb_text="@string/Moshahedat"
        fancy:fb_textColor="#FFFFFF" />


</LinearLayout>
