                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    app:on="true"
                    app:textOn="@string/Play"
                    app:textOff="@string/Pause"
