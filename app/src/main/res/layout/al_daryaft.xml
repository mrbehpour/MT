<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!-- Daryaft Etelat Payeh Layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:id="@+id/cvPayeh"
        app:cardElevation="2dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Info Layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <!-- Title Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <!-- Title Lable -->
                    <TextView
                        android:id="@+id/tvLableDaryaftEtelatPayeh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical|right"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="دریافت اطلاعات پایه" />
                </LinearLayout>

                <!-- ProgressBar Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.daimajia.numberprogressbar.NumberProgressBar
                        android:id="@+id/pbDaryaftEtelatPayeh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- Icon Layout 0-->
            <ImageView
                android:id="@+id/ivPayeh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/daryaft_payeh"
                android:orientation="horizontal">
            </ImageView>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!-- Tanzimat Layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:id="@+id/cvTanzimat"

        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Info Layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <!-- Title Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <!-- Title Lable -->
                    <TextView
                        android:id="@+id/tvLableTanzimat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical|right"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="دریافت تنظیمات" />
                </LinearLayout>

                <!-- ProgressBar Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.daimajia.numberprogressbar.NumberProgressBar
                        android:id="@+id/pbTanzimat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- Icon Layout -->
            <ImageView
                android:id="@+id/ivTanzimat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/daryaft_tanzimat"
                android:orientation="horizontal">

            </ImageView>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!-- Karbaran Layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/cvKarbaran"
        android:orientation="horizontal"

        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Info Layout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <!-- Title Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <!-- Title Lable -->
                    <TextView
                        android:id="@+id/tvLableKarbaran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical|right"
                        android:textAlignment="gravity"
                        android:textColor="@color/grey_900"
                        android:text="دریافت کاربران" />
                </LinearLayout>

                <!-- ProgressBar Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.daimajia.numberprogressbar.NumberProgressBar
                        android:id="@+id/pbKarbaran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

            <!-- Icon Layout -->
            <ImageView
                android:id="@+id/ivKarbaran"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/daryaft_karbaran"
                android:orientation="horizontal">
            </ImageView>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Help -->
    <TextView android:id="@+id/tvSanjesh"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/byekan"
        android:text="جهت شروع دریافت، قسمت مربوطه را لمس نمایید"
        android:textColor="@color/grey_600"
        android:gravity="center|bottom"
        android:textSize="11sp"/>
</LinearLayout>