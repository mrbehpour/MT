<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:gravity="right|center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="2dp" >

        <ImageView
            android:id="@+id/imgDialogLeftTitle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDialogLeftTitle"
            android:fontFamily="@font/byekan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>

        <TextView
            android:id="@+id/txtDialogTitle"
            android:fontFamily="@font/byekan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>

        <TextView
            android:id="@+id/txtDialogRightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imgDialogRightTitle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ffcb13"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:visibility="visible" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:gravity="right|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="2dp" >

        <LinearLayout
            android:id="@+id/llBodyPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp" >




            <!--FileId-->
            <LinearLayout
                android:layoutDirection="rtl"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:fontFamily="@font/byekan"
                    android:id="@+id/tvMessage"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <!--FileId-->
            <LinearLayout
                android:layoutDirection="rtl"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/byekan"
                    android:layout_width="wrap_content"
                    android:text="@string/DeviceIMEI"
                    android:layout_height="wrap_content" />
                <EditText
                    android:fontFamily="@font/byekan"
                    android:id="@+id/etSerial"
                    android:textAlignment="center"
                    android:layout_marginRight="40dp"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llButtonPanel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="right|center_vertical" >
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/Cancel"
                android:textColor="#eeeeee"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"

                android:gravity="center"
                android:text="@string/Ok"
                android:textColor="#eeeeee"
                android:textSize="20sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>