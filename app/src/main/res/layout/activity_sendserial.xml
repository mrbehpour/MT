<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_200"
    android:orientation="vertical"
    android:gravity="center_vertical">

    //empty top layout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
    </LinearLayout>

    //icon layout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <!-- App Icon -->
        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/imgIcon"
            android:layout_width="247dp"
            android:layout_height="100dp"
            android:background="@drawable/login_animatedlogo" />
    </LinearLayout>

    //Down layout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <!-- button -->

        <!-- omoor text -->
        <TextView
            android:fontFamily="@font/byekan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:text="@string/omoorMarboote"
            android:textColor="@color/grey_600"
            android:gravity="center"
            android:textSize="14sp"/>

        <!-- omoor Spinner -->
        <Spinner
            android:id="@+id/spnOmoor"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:background="@drawable/custom_rectangle"
            android:layout_gravity="center"
            />

        <!-- button -->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            android:fontFamily="@font/byekan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="@string/taeed"/>


        <!-- spacer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1">

            <!-- settings -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/laySettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivSettings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.65"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/settings"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvSettings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/menuItem4"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/tvSerial"
                android:fontFamily="@font/byekan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/shomareSerial"
                android:textColor="@color/grey_700"
                android:gravity="center"
                android:textSize="14sp"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="8dp"
                android:text="@string/sanjesh"
                android:textColor="@color/grey_400"
                android:gravity="center"
                android:textSize="11sp"
                tools:ignore="Suspicious0dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
