<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_200">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/tvMeterCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/sefr" />

                <TextView
                    android:id="@+id/tvMeterCompanyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_toRightOf="@id/tvMeterCompany"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/meterCompany" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/tvMeterType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textAlignment="gravity"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/sefr" />

                <TextView
                    android:id="@+id/tvMeterTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_toRightOf="@id/tvMeterType"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/meterType"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/tvMeterString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textAlignment="gravity"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/sefr" />

                <TextView
                    android:id="@+id/tvMeterStringTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="14sp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_toRightOf="@id/tvMeterString"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/meterString"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true">
        <TextView
            android:id="@+id/txtReaddata"
            android:layout_above="@+id/btnRead"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </ScrollView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRead"
            android:fontFamily="@font/byekan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="@string/Reconnect"/>

    </RelativeLayout>

</LinearLayout>
