<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_200">

    <!-- background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_back2"/>
    </LinearLayout>

    <!-- button layouts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- top layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <!-- gozaresh -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/layGozareshat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivGozareshat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/finance"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvGozareshat"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/menuItemReport"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_400"
                        android:gravity="center"
                        android:text="@string/ReportDes"/>
                </LinearLayout>
            </LinearLayout>

            <!-- sanjesh -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.34"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/laySanjesh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivSanjesh"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/checkbox_marked_outline"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvSanjesh"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/Sanjesh"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_400"
                        android:gravity="center"
                        android:text="@string/SanjeshDes"/>
                </LinearLayout>
            </LinearLayout>

            <!-- bazdid -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/layBazdid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivBazdid"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/account_search"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvBazdid"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/menuItemBazdid"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_400"
                        android:gravity="center"
                        android:text="@string/BazdidDes"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- center layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <!-- settings -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/laySettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivSettings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/settings"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvSettings"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/menuItemSetting"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_400"
                        android:gravity="center"
                        android:text="@string/SettingDes"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ersal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/layErsal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivErsal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/briefcase_upload"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvErsal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/menuItemSendJoints"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_400"
                        android:gravity="center"
                        android:text="@string/SendingDes"/>
                </LinearLayout>
            </LinearLayout>

            <!-- daryaft moshtarakin -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/layMoshtarakin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivMoshtarakin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_daryaftmoshtarakin"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvMoshtarakin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/menuItemRecieveJoints"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_400"
                        android:gravity="center"
                        android:text="@string/RecieveJointsDes"/>
                </LinearLayout>
            </LinearLayout>

            <!-- daryaft -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:background="@drawable/custom_homeitem">
                <LinearLayout
                    android:id="@+id/layDaryaft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ivDaryaft"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/file_download_outline"
                        android:tint="@color/orange_300"/>
                    <TextView
                        android:id="@+id/tvDaryaft"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:fontFamily="@font/byekan"
                        android:textSize="14sp"
                        android:textColor="@color/grey_700"
                        android:gravity="center"
                        android:text="@string/menuItemBaseInfo"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/byekan"
                        android:textSize="12sp"
                        android:textColor="@color/grey_400"
                        android:gravity="center"
                        android:text="@string/RecieveBaseInfoDes"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <!-- bottom layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <!-- exit button -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnExit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="0.22"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/custom_home_exit"
                android:drawableLeft="@drawable/exit_to_app"
                android:drawableTint="@color/orange_300"
                android:fontFamily="@font/byekan"
                android:paddingLeft="6dp"
                android:text="@string/menuItemExit"
                android:textColor="@color/orange_300"
                android:textSize="12sp" />

            <!-- version -->
            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="2dp"
                android:fontFamily="@font/byekan"
                android:textColor="@color/grey_600"
                android:gravity="center|right"
                android:textSize="14sp"
                android:text="@string/DashSign"/>

            <!-- text -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/byekan"
                android:textColor="@color/grey_600"
                android:gravity="center"
                android:textSize="11sp"
                android:text="@string/NameAndVersion"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>