<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/grey_200">

    <!-- Title Layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/tvErrPerc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="" />

                <TextView
                    android:id="@+id/tvErrPercTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_toRightOf="@id/tvErrPerc"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/darsadKhata" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">
                <TextView
                    android:id="@+id/tvTestRoundNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textAlignment="gravity"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/sefr" />

                <TextView
                    android:id="@+id/tvTestRoundNumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_toRightOf="@id/tvTestRoundNum"
                    android:textDirection="rtl"
                    android:textColor="@color/grey_900"
                    android:text="@string/tedadDorTest"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Khata Layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvKhata"
        tools:listitem="@layout/al_test_amaliyat_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Save Test Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSaveTestResult"
            android:fontFamily="@font/byekan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.33"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="@string/zakhireNatayej"/>

        <!-- End Test Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnFinishTest"
            android:fontFamily="@font/byekan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.33"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="@string/payanNatayej"/>

        <!-- End Test Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnStartTest"
            android:fontFamily="@font/byekan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.33"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="@string/startTest"/>
    </LinearLayout>
</LinearLayout>
