<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/grey_200">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:background="@drawable/shape_textview_back"
        android:layout_margin="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tvTestRoundNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/byekan"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textAlignment="gravity"
            android:textDirection="rtl"
            android:textColor="@color/grey_900"
            android:text="0" />

        <TextView
            android:id="@+id/tvTestRoundNumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/byekan"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_toRightOf="@id/tvTestRoundNum"
            android:textDirection="rtl"
            android:textColor="@color/grey_900"
            android:text="تعداد دور تست" />

        <TextView
            android:id="@+id/tvErrPerc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/byekan"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_toRightOf="@id/tvTestRoundNumTitle"
            android:textDirection="rtl"
            android:textColor="@color/grey_900"
            android:text="99.99%" />

        <TextView
            android:id="@+id/tvErrPercTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/byekan"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_toRightOf="@id/tvErrPerc"
            android:textDirection="rtl"
            android:textColor="@color/grey_900"
            android:text="درصد خطا" />

    </RelativeLayout>


    <!-- Title Layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:id="@+id/tvLableNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/byekan"
                android:textSize="16sp"
                android:gravity="left|center_vertical"
                android:textAlignment="gravity"
                android:textColor="@color/grey_900"
                android:text="مقدار" />
            <TextView
                android:id="@+id/tvLableTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/byekan"
                android:textSize="16sp"
                android:gravity="right|center_vertical"
                android:textAlignment="gravity"
                android:textDirection="rtl"
                android:textColor="@color/grey_900"
                android:text="درصد خطا" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Khata Layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvKhata"
        tools:listitem="@layout/al_test_amaliyat_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- End Test Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnTaeed"
            android:fontFamily="@font/byekan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="تایید و مشاهده نتایج"/>
        <!-- End Test Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:fontFamily="@font/byekan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="شروع"/>
    </LinearLayout>
</LinearLayout>
