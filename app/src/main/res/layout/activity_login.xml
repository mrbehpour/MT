<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_200">

    //empty top layout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
    </LinearLayout>

    //icon layout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <!-- App Icon -->
        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/imgIcon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/mt_gificon" />
    </LinearLayout>

    //Down layout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <!-- Name Spinner -->
        <Spinner
            android:id="@+id/spnUserName"
            android:fontFamily="@font/byekan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/custom_rectangle"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            />

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:fontFamily="@font/byekan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColorHint="#d2cfe0">
            <EditText android:id="@+id/edtPassword"
                android:fontFamily="@font/byekan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:textColor="@color/textViewColor"
                android:textAlignment="center"
                android:background="@drawable/custom_rectangle"
                android:drawableRight="@drawable/key"
                android:drawableTint="@color/grey_800"
                android:paddingRight="12dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:fontFamily="@font/byekan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="ورود"/>

        <TextView android:id="@+id/tvHelp"
            android:fontFamily="@font/byekan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="نمی توانید وارد شوید؟"
            android:textColor="@color/grey_600"
            android:gravity="center"
            android:textSize="14sp"/>

        <TextView android:id="@+id/tvSanjesh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Sanjesh Afzar Asia Co LTD."
            android:textColor="@color/textViewColorDark"
            android:gravity="center|bottom"
            android:textSize="11sp"/>

    </LinearLayout>











</LinearLayout>
