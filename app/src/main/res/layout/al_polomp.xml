<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Polomp Kontor Button-->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnPolompKontor"
        android:fontFamily="@font/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="پلمپ کنتور"/>

    <!-- Polomp CT Button-->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnPolompCT"
        android:fontFamily="@font/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="پلمپ CT ها"/>

    <!-- Polomp Fiyuz Button-->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnPolompFiyuz"
        android:fontFamily="@font/byekan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="پلمپ فیوزها"/>

</LinearLayout>

