<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <!-- Name Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="محمدرضا جلیلی نیا"
            android:layout_weight="1"/>
        <!-- Name Lable -->
        <TextView
            android:id="@+id/tvLableName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:text="نام مشترک: " />
    </LinearLayout>

    <!-- Shomare Badane Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <!-- Shomare Badane -->
        <TextView
            android:id="@+id/tvShomareBadane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="12356987841" />
        <!-- Shomare Badane Lable -->
        <TextView
            android:id="@+id/tvLableShomareBadane"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:text="شماره بدنه: " />
    </LinearLayout>

    <!-- Address Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <!-- Address -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:layout_marginLeft="8dp"
            android:text="تهران، میدان ونک، خ گاندی، خ 16، پلاک 8، طبقه 3" />
        <!-- Address Lable -->
        <TextView
            android:id="@+id/tvLableAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:text="آدرس: " />
    </LinearLayout>

    //space
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="vertical">
    </LinearLayout>
    //line
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#aaa"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
