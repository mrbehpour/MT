<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_200">

    <!-- top layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="vertical">

        <!-- row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <!-- text bazrasi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"
                android:background="@color/red_300"
                android:orientation="horizontal"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tvBazrasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_50"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/DashSign"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_200"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="@string/tedadBazrasi"/>
            </LinearLayout>
            <!-- test -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:background="@color/blue_300"
                android:orientation="horizontal"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tvTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_50"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/DashSign"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_200"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="@string/tedadTest"/>
            </LinearLayout>
        </LinearLayout>

        <!-- row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <!-- Gheraat -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"
                android:background="@color/green_300"
                android:orientation="horizontal"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tvGheraat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_50"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/DashSign"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_200"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="@string/tedadGheraat"/>
            </LinearLayout>
            <!-- Polomp -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="4dp"
                android:background="@color/orange_300"
                android:orientation="horizontal"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tvPolomp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_50"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="@string/DashSign"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/byekan"
                    android:textColor="@color/grey_200"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="@string/tedadPolomp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- center layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:orientation="vertical">


    </LinearLayout>

    <!-- bottom layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- exit button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnExit"
            android:fontFamily="@font/byekan"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="6dp"
            android:layout_gravity="center"
            android:textColor="@color/grey_100"
            android:textSize="12sp"
            android:text="@string/menuItemExit"
            android:drawableLeft="@drawable/exit_to_app"
            android:drawableTint="@color/grey_100"/>
    </LinearLayout>
</LinearLayout>
